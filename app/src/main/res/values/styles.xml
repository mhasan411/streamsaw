<resources>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Widget.AppCompat.ProgressBar.Horizontal"
        parent="@style/Base.Widget.AppCompat.ProgressBar.Horizontal" />


    <style name="EditTextOverride" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_11</item>
    </style>


    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="editTextStyle">@style/EditTextOverride</item>
        <item name="android:editTextStyle">@style/EditTextOverride</item>
    </style>


    <style name="H100">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#fff0f1f5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:alpha">0.9</item>
    </style>



    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>



    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>



    <style name="EditText.Orange" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/main_color</item>
        <item name="colorControlActivated">@color/grey_11</item>
        <item name="colorControlHighlight">@color/grey_11</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>


    <style name="StyleToolBarWhite">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <!--Theme for date picker dialog-->

    <!--Theme for time picker dialog-->

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_11</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

    <!-- Base application theme. -->


    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>


    <style name="TextInputLayoutErrorStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/pixel_10dp</item>
    </style>


    <style name="TubiPlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Base.Widget.AppCompat.SeekBar" parent="@android:style/Widget">
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/abc_seekbar_track_material</item>
        <item name="android:progressDrawable">@drawable/abc_seekbar_track_material</item>
        <item name="android:thumb">@drawable/abc_seekbar_thumb_material</item>
    </style>


    <style name="PlayerSeekBar">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:maxHeight">@dimen/pixel_4dp</item>
        <item name="android:progressDrawable">@drawable/tubi_tv_seek_bar</item>
        <item name="android:minHeight">@dimen/pixel_4dp</item>
        <item name="android:thumb">@drawable/tubi_tv_drawable_scrubber_selector</item>
    </style>


    <!-- Alert Dialog -->
    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackground">#424242</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:background">@drawable/tv_auto_play_overlay</item>
        <item name="android:colorPrimary">#ffffff</item>
        <item name="android:colorAccent">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textSize">16dp</item>
        <item name="textColorAlertDialogListItem">#b3b3b3</item>
        <item name="android:textColor">#e6e6e6</item>

    </style>


</resources>
