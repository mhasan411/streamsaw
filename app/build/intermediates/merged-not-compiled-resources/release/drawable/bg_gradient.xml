<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/blue_grey_600" />
                    <gradient

                        android:angle="90"
                        android:startColor="#00c8a1"
                        android:centerColor="#00b4ca"
                        android:endColor="#009ff3">


                    </gradient>
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="60dp" android:height="@dimen/pixel_20dp" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_focused="true">

        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="180"
                        android:startColor="#00c8a1"
                        android:centerColor="#00b4ca"
                        android:endColor="#009ff3">

                    </gradient>
                    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
                    <size android:width="60dp" android:height="@dimen/pixel_20dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>

        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <gradient

                        android:angle="180"
                        android:startColor="#00c8a1"
                        android:centerColor="#00b4ca"
                        android:endColor="#009ff3">


                    </gradient>
                    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="60dp" android:height="@dimen/pixel_20dp" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>