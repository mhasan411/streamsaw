<?xml version="1.0" encoding="utf-8"?>

                                                   


    <LinearLayout
        android:id="@+id/tubi_radio_button_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tv_steel_grey"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingStart="29dp"
        android:paddingTop="7dp" android:tag="layout/view_tubi_radio_button_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <RadioButton
            android:id="@+id/tubi_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/tubi_radio_quality_selector"
            tools:checked="true" />

        <com.tubitv.ui.VaudTextView
            android:id="@+id/tubi_radio_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:textSize="18sp"
            tools:text="1080P" />

    </LinearLayout>
         