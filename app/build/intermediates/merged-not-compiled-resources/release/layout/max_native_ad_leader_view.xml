<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/max_native_leader_template"
    android:layout_width="728dp"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/native_icon_image_view"
        style="@style/LargeIconImageView"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/native_ad_text_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="8dp"
        android:layout_toStartOf="@+id/native_cta_button"
        android:layout_toLeftOf="@id/native_cta_button"
        android:layout_toEndOf="@id/native_icon_image_view"
        android:layout_toRightOf="@id/native_icon_image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/native_title_text_view"
            style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.LargeTitleTextView"
            android:layout_marginBottom="6dp"
            tools:text="TITLE_TEXT_VIEW" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.LargeAdBadgeTextView" />

            <TextView
                android:id="@+id/native_body_text_view"
                style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.LargeBodyTextView"
                tools:text="BODY_TEXT_VIEW" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/native_cta_button"
        style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.CTAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        tools:text="CTA" />

</RelativeLayout>
